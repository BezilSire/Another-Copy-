rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    // Faster admin check using the incoming request's token claims if available,
    // or falling back to a direct document read.
    function isAdmin() {
      return isSignedIn() && 
        (request.auth.token.role == 'admin' || 
         get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin');
    }

    // --- TREASURY & LEDGER (Core Protocol) ---
    
    match /treasury_vaults/{vaultId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }

    match /ledger/{docId} {
      allow get, list: if isSignedIn();
      allow create: if isSignedIn();
    }

    match /globals/{docId} {
      allow get, list: if isSignedIn();
      allow write: if isAdmin();
    }

    // --- GLOBAL DATA ---

    match /broadcasts/{broadcastId} {
      allow get, list: if isSignedIn();
      allow write: if isAdmin();
    }

    match /activity/{activityId} {
      allow get, list: if isSignedIn();
      allow create: if isSignedIn();
    }

    match /sustenance_cycles/{docId} {
      allow get, list: if isSignedIn();
      allow write: if isAdmin();
    }

    // --- USER PROFILES ---

    match /users/{userId} {
      allow get, list: if isSignedIn();
      allow create: if isSignedIn();
      
      allow update: if isOwner(userId) 
                    || isAdmin()
                    || (isSignedIn() && request.resource.data.diff(resource.data).affectedKeys().hasOnly([
                        'followers', 'following', 'lastSeen', 'ubtBalance', 'publicKey', 'fcmToken'
                    ]));

      match /notifications/{notificationId} {
        allow read, write: if isOwner(userId) || isAdmin();
      }

      match /transactions/{txId} {
        allow read: if isOwner(userId) || isAdmin();
        allow write: if isSignedIn(); 
      }
    }

    // --- CONTENT & FEATURES ---

    match /posts/{postId} {
      allow get, list: if isSignedIn();
      allow create: if isSignedIn();
      allow update: if (isSignedIn() && resource.data.authorId == request.auth.uid) 
                    || isAdmin() 
                    || (isSignedIn() && request.resource.data.diff(resource.data).affectedKeys().hasAny(['upvotes', 'commentCount', 'repostCount', 'isPinned']));
      allow delete: if (isSignedIn() && resource.data.authorId == request.auth.uid) || isAdmin();

      match /comments/{commentId} {
        allow get, list: if isSignedIn();
        allow create: if isSignedIn();
        allow update: if (isSignedIn() && resource.data.authorId == request.auth.uid) 
                      || isAdmin() 
                      || (isSignedIn() && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['upvotes']));
        allow delete: if (isSignedIn() && resource.data.authorId == request.auth.uid) || isAdmin();
      }
    }

    match /conversations/{conversationId} {
      allow get, list: if isSignedIn() && (resource.data.members.hasAny([request.auth.uid]) || isAdmin());
      allow create: if isSignedIn();
      allow update: if isSignedIn() && (resource.data.members.hasAny([request.auth.uid]) || isAdmin());

      match /messages/{messageId} {
        allow read, list, write: if isSignedIn(); 
      }
    }

    match /members/{memberId} {
      allow get, list: if isSignedIn();
      allow write: if isSignedIn(); 
    }

    match /p2p_offers/{offerId} {
      allow get, list: if isSignedIn();
      allow create: if isSignedIn();
      allow update: if isSignedIn(); 
      allow delete: if isSignedIn() && resource.data.sellerId == request.auth.uid;
    }

    match /pending_ubt_purchases/{docId} {
      allow get, list: if isSignedIn();
      allow create: if isSignedIn();
      allow update: if isAdmin();
      allow delete: if isAdmin();
    }

    match /sell_requests/{docId} {
        allow get, list: if isSignedIn();
        allow create: if isSignedIn();
        allow update: if isSignedIn();
        allow delete: if isAdmin();
    }

    match /reports/{reportId} {
      allow read, list: if isAdmin();
      allow create: if isSignedIn();
      allow update: if isAdmin();
    }

    match /proposals/{proposalId} {
      allow read, list: if isSignedIn();
      allow create: if isSignedIn();
      allow update: if isSignedIn(); 
      
      match /comments/{commentId} {
        allow read, list, write: if isSignedIn();
      }
    }

    match /ventures/{ventureId} {
      allow read, list: if isSignedIn();
      allow create: if isSignedIn();
      allow update: if (isSignedIn() && (resource.data.ownerId == request.auth.uid || isAdmin()));
      allow delete: if (isSignedIn() && resource.data.ownerId == request.auth.uid) || isAdmin();
    }

    match /payouts/{payoutId} {
      allow read, list: if (isSignedIn() && (resource.data.userId == request.auth.uid || isAdmin()));
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
      allow update: if isAdmin();
    }

    match /sustenance_vouchers/{voucherId} {
      allow read, list: if (isSignedIn() && (resource.data.userId == request.auth.uid || isAdmin()));
      allow update: if isAdmin() || (isSignedIn() && resource.data.userId == request.auth.uid); 
    }
  }
}