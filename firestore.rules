
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // --- HELPER FUNCTIONS ---
    function isSignedIn() { return request.auth != null; }
    function isGuest() { return isSignedIn() && request.auth.token.firebase.sign_in_provider == 'anonymous'; }
    function isMember() { return isSignedIn() && !isGuest(); }
    function isAdmin() { 
      let userDoc = get(/databases/$(database)/documents/users/$(request.auth.uid));
      return isMember() && userDoc != null && userDoc.data.role == 'admin'; 
    }
    function isOwner(userId) { return isSignedIn() && request.auth.uid == userId; }

    // --- IDENTITY & WALLETS ---
    match /users/{userId} {
      allow read, list: if isSignedIn(); 
      allow create: if isMember() && request.auth.uid == userId;
      // Allow specific balance and social fields to be updated by other members for P2P transactions and vouches
      allow update: if isOwner(userId) || isAdmin() || (isMember() && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['ubtBalance', 'credibility_score', 'vouchCount', 'followers', 'lastSeen']));

      match /notifications/{id} { allow read, write: if isOwner(userId) || isAdmin(); }
      match /transactions/{id} { allow read, list: if isOwner(userId) || isAdmin(); allow create: if isMember(); }
      match /vaults/{id} { allow read, write, list: if isOwner(userId) || isAdmin(); }
    }

    // --- GOVERNANCE ---
    match /candidates/{candidateId} {
      allow read, list: if isSignedIn();
      allow create: if isMember();
      allow update: if isMember() && (request.resource.data.diff(resource.data).affectedKeys().hasOnly(['votes', 'voteCount', 'status']));
      allow delete: if isAdmin() || (isMember() && resource.data.userId == request.auth.uid);
    }

    // --- TREASURY & LEDGER ---
    match /treasury_vaults/{vaultId} {
      allow read, list: if isSignedIn();
      // Allow balance updates during transfers, but ensure only the balance is touched by members
      allow update: if isAdmin() || (isMember() && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['balance']));
      allow create, delete: if isAdmin();
    }
    match /ledger/{docId} {
      allow read, list: if isSignedIn();
      allow create: if isMember();
      allow update, delete: if isAdmin();
    }
    match /globals/{docId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }

    // --- BRIDGE ---
    match /pending_ubt_purchases/{docId} {
      allow read, list: if isOwner(resource.data.userId) || isAdmin();
      allow create: if isMember();
      allow update, delete: if isAdmin();
    }

    // --- COMMUNITY & COMMS ---
    match /posts/{postId} {
      allow read, list: if isSignedIn();
      allow create: if isMember();
      // Explicitly allow all members to like (update upvotes) or repost (increment repostCount)
      allow update: if isMember() && (resource.data.authorId == request.auth.uid || isAdmin() || request.resource.data.diff(resource.data).affectedKeys().hasOnly(['upvotes', 'repostCount', 'commentCount']));
      allow delete: if isAdmin() || (isMember() && resource.data.authorId == request.auth.uid);
      
      match /comments/{id} { allow read, list: if isSignedIn(); allow write: if isMember(); }
    }
    
    match /conversations/{convoId} {
      allow read, list: if isMember() && request.auth.uid in resource.data.members;
      allow write: if isMember() && request.auth.uid in resource.data.members;
      allow create: if isMember() && request.auth.uid in request.resource.data.members;
      
      match /messages/{id} { allow read, write, list: if isMember(); }
    }

    // --- MEETINGS (Mesh Enhanced) ---
    match /meetings/{meetingId} {
      allow get: if true;
      allow list: if isAdmin();
      allow create: if isMember();
      allow update: if isSignedIn();
      allow delete: if isAdmin() || (isSignedIn() && resource.data.hostId == request.auth.uid);

      match /signals/{id} { allow read, write, list: if isSignedIn(); }
      match /ice/{id} { allow read, write, list: if isSignedIn(); }
    }

    // --- ECOSYSTEM MODULES ---
    match /members/{id} { 
      allow read, list: if isSignedIn(); 
      allow create: if isMember(); 
      allow update: if isAdmin() || (isMember() && resource.data.uid == request.auth.uid);
      allow delete: if isAdmin(); 
    }
    
    match /proposals/{id} { 
      allow read, list: if isSignedIn(); 
      allow create, update: if isMember(); 
    }
    
    match /ventures/{id} { 
      allow read, list: if isSignedIn(); 
      allow create: if isMember(); 
      allow update: if isMember() && (resource.data.ownerId == request.auth.uid || isAdmin());
      allow delete: if isAdmin() || (isMember() && resource.data.ownerId == request.auth.uid);
      
      match /distributions/{id} { allow read, list: if isSignedIn(); allow write: if isAdmin(); }
    }
    
    match /payouts/{id} { 
      allow read, list: if isOwner(resource.data.userId) || isAdmin(); 
      allow create: if isMember(); 
      allow update: if isAdmin(); 
    }

    match /broadcasts/{id} {
      allow read, list: if isSignedIn();
      allow write: if isAdmin();
    }
    
    match /vouchers/{id} { allow read, list: if isMember(); allow write: if isAdmin(); }
    match /activity/{id} { allow read, list: if isSignedIn(); allow write: if isMember(); }
    match /reports/{id} { allow read, list: if isMember() || isAdmin(); allow write: if isMember(); }
    match /vouches/{id} { allow read, list: if isSignedIn(); allow write: if isMember(); }
    match /resources/{id} { allow read, list: if isSignedIn(); allow write: if isAdmin(); }
    match /disputes/{id} { allow read, list: if isSignedIn(); allow write: if isMember(); }
  }
}
